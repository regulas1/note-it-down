{
  "manifest_version": 3,

  "name": "infosnap-chrome",
  "description": "chrome extension for infosnap",
  "version": "1.0",

  "options_page": "options.html",

  "action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "commands": {
    "take-note": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Take a note"
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
